package com.jlcindia.pattern;

import java.util.Scanner;

public class Pattern48 {

	public static void main(String[] args) {
		System.out.println("Enter the Height of the pattern");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int sp = n/2;
		int h = n - sp;
		for(int i=h;i>= 1;i--){
			
			for(int j=sp;j>=i;j--){
				System.out.print(" ");
			}
			for(int j=1;j<n;j++){
				System.out.print(i);
			}
			/*for(int j=n/2;j>=i;j--){
				System.out.print(i);
			}*/
			n -= 2;
			System.out.println();
		}

	}

}
