package com.jlcindia.pattern;

import java.util.Scanner;

public class Pattern85 {

	public static void main(String[] args) {
		System.out.println("Enter the Height of the pattern");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		for(int i=n;i>=1;i--){
			
			for(int j=n;j>=(i-1)*2;j--){
				System.out.print("  ");
			}
			System.out.print("*");
			for(int j=n;j>=i;j--){
				System.out.print("  ");
			}
			if(i>1){
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
